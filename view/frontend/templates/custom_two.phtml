</div>
<div id="js-quicklook-popup" style="display: none;">
    <iframe style="margin-top: 2vh" id="quicklook-iframe" width="100%" height="500px" frameborder="0" src=""></iframe>
</div>
<script>
    requirejs([
            'jquery',
            'Magento_Ui/js/modal/modal',
            'onepage_scroll'
        ],
        function($, modal) {

            $(document).ready(function() {
                if($("#custom-main-container").length) {
                    $("#custom-main-container").onepage_scroll({
                        sectionContainer: ".custom-product-container",
                        responsiveFallback: 600,
                        loop: true,
                        direction: "horizontal"
                    });
                }

                if($("#custom-main-container-reverse").length) {
                    $("#custom-main-container-reverse").onepage_scroll({
                        sectionContainer: ".custom-product-container-reverse",
                        responsiveFallback: 600,
                        loop: true,
                        direction: "vertical"
                    });
                }
                var options = {
                    type: 'popup',
                    responsive: true,
                    innerScroll: true,
                    modalClass: 'mybuttont_modal',
                    title: 'Quick Look',
                    buttons: [{
                        text: 'close',
                        class: '.m2express-quickview-close-btn',
                        click: function() {
                            this.closeModal();
                        } //handler on button click
                    }]
                };

                var popup = modal(options, $('#js-quicklook-popup'));
                $(".open-quick-look-modal").on('click',function(){
                    var productId = $(this).data('pid');
                    //$("#ql-product-name").html('test' + productId);
                    $("#quicklook-iframe").attr('src','/quicklook/display/view/id/' + productId);
                    $("#js-quicklook-popup").modal("openModal");
                });

            });
        }
    );
</script>